<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="window" prefHeight="700.0" prefWidth="700.0" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controllers.UpdateFlagViewController">
    <children>
    <TableView onMouseClicked="#update" fx:id="flagsTable" prefHeight="371.0" prefWidth="720.0">
        <columns >

            <TableColumn prefWidth="360.0" resizable="false" text="Flag id">
                <cellValueFactory>
                    <PropertyValueFactory property="flag_id" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="360.0" resizable="false" text="Nation">
                <cellValueFactory>
                    <PropertyValueFactory property="nation" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
      <Button onAction="#goBack" layoutX="450.0" layoutY="600.0" mnemonicParsing="false" text="Go to the main menu" />
    </children>
</AnchorPane>
